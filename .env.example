# Environment variables template
# Copy this file to .env and fill in your values

# Project paths (optional, defaults work for most cases)
PROJECT_ROOT=/path/to/hybrid_qgan_drug_discovery
DATA_DIR=/path/to/data

# API Keys (if using cloud services)
# IBM Quantum (for Qiskit hardware access)
IBM_QUANTUM_TOKEN=your_ibm_quantum_token_here

# Database (if using external storage)
DATABASE_URI=sqlite:///experiments.db

# Logging
LOG_LEVEL=INFO

# Streamlit
STREAMLIT_SERVER_PORT=8501

# Docking
VINA_EXECUTABLE=vina
OPENBABEL_EXECUTABLE=obabel

# Model paths (optional)
CHECKPOINT_DIR=experiments/checkpoints
REPORTS_DIR=experiments/reports
